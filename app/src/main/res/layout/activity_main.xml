<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5141414"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toTopOf="@+id/grid_layout"
        app:layout_constraintEnd_toEndOf="@+id/grid_layout"
        android:layout_marginBottom="50dp"/>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:backgroundTint="#0091EA"
            android:onClick="cliclouBotao"
            android:text="C"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn_divisao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:backgroundTint="#FF6D00"
            android:onClick="cliclouBotao"
            android:text="/"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn_sete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:onClick="cliclouBotao"
            android:text="7"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn_oito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:onClick="cliclouBotao"
            android:text="8"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn_nove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:onClick="cliclouBotao"
            android:text="9"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn_multiplicacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:backgroundTint="#FF6D00"
            android:onClick="cliclouBotao"
            android:text="X"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn_quatro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:onClick="cliclouBotao"
            android:text="4"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn_cinco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:onClick="cliclouBotao"
            android:text="5"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn_seis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:onClick="cliclouBotao"
            android:text="6"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn_subtracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:backgroundTint="#FF6D00"
            android:onClick="cliclouBotao"
            android:text="-"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn_um"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:onClick="cliclouBotao"
            android:text="1"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn_dois"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:onClick="cliclouBotao"
            android:text="2"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn_treis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:onClick="cliclouBotao"
            android:text="3"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn_soma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:backgroundTint="#FF6D00"
            android:onClick="cliclouBotao"
            android:text="+"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:onClick="cliclouBotao"
            android:text="0"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/btn_ponto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:onClick="cliclouBotao"
            android:text="."
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/btn_igual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:textSize="20dp"
            android:backgroundTint="#0091EA"
            android:onClick="cliclouBotao"
            android:text="="
            app:layout_column="3"
            app:layout_row="4" />

    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>